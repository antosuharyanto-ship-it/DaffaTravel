generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT
  CUSTOMER
}

enum PackageType {
  UMRAH
  HAJJ
  HOLIDAY
  OTHER
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  CANCELLED
  FAILED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(CUSTOMER)
  branchId  Int?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bookings  Booking[]
}

model Branch {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  contact   String
  agents    User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Package {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  price       Decimal     @db.Decimal(20, 2)
  type        PackageType
  duration    String      // e.g., "9 Days"
  startDate   DateTime
  endDate     DateTime
  availableSlots Int
  image       String?
  flyerImage  String?     // New: Flyer promotion image
  hotelStars  Int         @default(3) // New: Hotel star rating
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  bookings    Booking[]
  leads       Lead[]
}

model Lead {
  id            Int      @id @default(autoincrement())
  name          String
  email         String
  phone         String
  whatsapp      String
  preferredDate DateTime
  packageId     Int?
  package       Package? @relation(fields: [packageId], references: [id])
  status        String   @default("PENDING") // PENDING, FOLLOWED_UP, COMPLETED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Booking {
  id            Int               @id @default(autoincrement())
  userId        Int
  user          User              @relation(fields: [userId], references: [id])
  packageId     Int
  package       Package           @relation(fields: [packageId], references: [id])
  agentId       Int?              // New: Track sales by agents
  bookingDate   DateTime          @default(now())
  status        TransactionStatus @default(PENDING)
  totalAmount   Decimal           @db.Decimal(20, 2)
  paymentProof  String?
  updatedAt     DateTime          @updatedAt
}

model Gallery {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  caption   String?
  category  String?  // e.g., "UMRAH", "HAJJ", "HOLIDAY"
  createdAt DateTime @default(now())
}

model Testimony {
  id        Int      @id @default(autoincrement())
  name      String
  content   String
  rating    Int      @default(5)
  imageUrl  String?
  packageId Int?
  createdAt DateTime @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  imageUrl  String?
  authorId  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
